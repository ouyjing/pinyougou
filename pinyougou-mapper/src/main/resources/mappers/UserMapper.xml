<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pinyougou.mapper.UserMapper">
<select id="findPasswordByUsername" resultType="String">
	SELECT password FROM tb_user
	<where>
		username = #{loginName};
	</where>
</select>
	<update id="updateUser" >
UPDATE tb_user SET PASSWORD = #{password},updated = #{updated}
<where>
	username = #{username}
</where>
	</update>
</mapper>